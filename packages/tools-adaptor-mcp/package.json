{
  "name": "@sylphlab/tools-adaptor-mcp",
  "version": "0.1.0",
  "description": "Adapter to convert internal SylphTool definitions to MCP SDK format.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "adapter",
    "tool"
  ],
  "author": "Sylph Lab",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@sylphlab/tools-core": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "tsup": "^8.4.0",
    "typescript": "^5.6.2",
    "vitest": "^3.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
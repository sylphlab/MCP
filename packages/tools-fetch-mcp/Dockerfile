# Generated by https://smithery.ai. See: https://smithery.ai/docs/build/project-config
FROM node:lts-alpine

# Set working directory
WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm@latest

# Copy entire monorepo into container
COPY . .

# Install dependencies and build only the tools-fetch-mcp package
RUN pnpm install --frozen-lockfile
RUN pnpm build --filter @sylphlab/tools-fetch-mcp

# Set working directory to the built package
WORKDIR /app/packages/tools-fetch-mcp

# Run the MCP server on container start
CMD ["node", "dist/index.js"]

{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Build options */
    "declaration": true, // Keep for tsup dts: true
    "declarationMap": true, // Keep for tsup dts: true
    "sourceMap": true,
    "outDir": "./dist",
    // "composite": false, // REMOVE composite

    /* Type Checking */
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
  // REMOVE references
}

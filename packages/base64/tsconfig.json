{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    // "composite": true, // Removed as per instruction V.H for tsup builds
    "allowSyntheticDefaultImports": true, // Often needed with resolveJsonModule

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Build options */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",

    /* Type Checking */
    "types": ["node"]
  },
  "include": ["src/**/*", "../package.json"], // Include package.json for import
  "exclude": ["node_modules", "dist"]
}

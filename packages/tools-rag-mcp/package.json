{
  "name": "@sylphlab/tools-rag-mcp",
  "version": "0.2.0",
  "description": "MCP Server for RAG operations using rag-core",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "mcp-rag-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo node_modules",
    "dev": "tsup --watch",
    "start": "node ./dist/index.js",
    "test": "vitest run"
  },
  "keywords": [
    "mcp",
    "rag",
    "ai",
    "vector",
    "embedding"
  ],
  "author": "Sylph Lab <hi@sylphlab.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "@sylphlab/tools-adaptor-mcp": "workspace:*",
    "@sylphlab/tools-core": "workspace:*",
    "@sylphlab/tools-rag": "workspace:*",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  }
}

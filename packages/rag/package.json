{
  "name": "@sylphlab/mcp-rag",
  "version": "0.1.0",
  "description": "MCP Server for RAG operations using rag-core",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "mcp-rag-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo node_modules",
    "dev": "tsup --watch",
    "start": "node ./dist/index.js",
    "test": "vitest run"
  },
  "keywords": [
    "mcp",
    "rag",
    "ai",
    "vector",
    "embedding"
  ],
  "author": "Sylph Lab <hi@sylphlab.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "@sylphlab/mcp-core": "workspace:*",
    "@sylphlab/mcp-rag-core": "workspace:*",
    "@sylphlab/mcp-utils": "workspace:*",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  }
}